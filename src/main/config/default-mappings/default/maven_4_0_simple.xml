<?xml version="1.0" encoding="UTF-8"?>
<xstructure xmlns="http://plugins.intellij.net/xstructure"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://plugins.intellij.net/xstructure http://plugins.intellij.net/xstructure/ns/xstructure_1_1.xsd"
            implType="default" name="Maven POM / simple" version="1.0" priority="10">
  <supported-schemas>
    <schema uri="http://maven.apache.org/maven-v4_0_0.xsd"/>
  </supported-schemas>
  <mappings defaultSkip="all">
    <mapping match="/project" label="{name} - v{version}" tip="{description}"/>
    <mapping match="/project/developers"/>
    <mapping match="/project/developers/developer" label="{name}"/>
    <mapping match="/project/dependencies"/>
    <mapping match="/project/build"/>
    <mapping match="/project/build/plugins"/>
    <mapping match="/project/(dependencies/dependency|build/plugins/plugin)"
             label="{groupId}:{artifactId}"/>
    <mapping match="/project/(repositories|pluginRepositories)"/>
    <mapping match="/project/(repositories|pluginRepositories)/(repository|pluginRepository)"
             label="{id}"/>
    <mapping match="/project/profiles"/>
    <mapping match="/project/profiles/profile" label="{id}"/>
  </mappings>
</xstructure>
