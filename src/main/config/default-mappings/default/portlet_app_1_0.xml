<?xml version="1.0" encoding="UTF-8"?>
<xstructure xmlns="http://plugins.intellij.net/xstructure"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://plugins.intellij.net/xstructure http://plugins.intellij.net/xstructure/ns/xstructure_1_0.xsd"
            implType="default" name="Portlet app" version="1.0" priority="10">
  <supported-schemas>
    <schema uri="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"/>
  </supported-schemas>
  <mappings>
    <mapping match="/portlet-app/custom-portlet-mode" label="{portlet-mode}" tip="{description}"
             skip="children"/>
    <mapping match="/portlet-app/custom-window-state" label="{window-state}" tip="{description}"
             skip="children"/>
    <mapping match="/portlet-app/portlet" label="{portlet-name}"/>
    <mapping match="/portlet-app/portlet/portlet-name" skip="all"/>
    <mapping match="/portlet-app/portlet/init-param" label="{name}={value}" tip="{description}"/>
    <mapping match="/portlet-app/portlet/(portlet-class|resource-bundle|supported-locale)"
             label="{.}"/>
    <mapping match="/portlet-app/portlet/portlet-preferences" skip="this"/>
    <mapping match="/portlet-app/portlet/portlet-preferences/preference" label="{name}"/>
    <mapping match="/portlet-app/portlet/(portlet-info|supports)/.*" label="{.}"/>
  </mappings>
</xstructure>